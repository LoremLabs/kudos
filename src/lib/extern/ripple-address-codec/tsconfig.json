{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "es2017"
    ],
    "rootDir": "./src",
    "outDir": "./dist",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": false,
    "preserveConstEnums": false,
    "suppressImplicitAnyIndexErrors": false,
    "skipLibCheck": true,
    "declaration": true,
    "composite": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": true
  },
  "exclude": [
    "node_modules",
    "dist"
  ],  
  "include": ["src/**/*.ts"]
  }

